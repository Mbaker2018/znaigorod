<div class='poster'>
  <% if feed_vote_post.feedable.voteable.gallery_images.any? %>
    <%= link_to feed_vote_post.feedable.voteable do %>
      <%= image_tag(resized_image_url(feed_vote_post.feedable.voteable.gallery_images.first.file_url, 100 , 100 ), :size => '100x100')
       %>
    <% end %>
  <% end %>
</div>

<div class='main'>
  <div class='time'><%= time_ago_in_words(feed_vote_post.created_at) %> назад</div>

  <% if current_user.present? && current_user.account.id == feed_vote_post.feedable.user.account.id %>
    <div class='type'>
      Нравится обзор
    </div>
  <% else %>
    <div class='avatar'>
      <%= link_to feed_vote_post.feedable.user.account do %>
        <%= image_tag(resized_image_url(feed_vote_post.feedable.user.account.avatar.url, 23, 23),
                      :size => '23x23', :alt => feed_vote_post.feedable.user.account.title) %>
      <% end %>
    </div>

    <div class='type'>
      <%= link_to feed_vote_post.feedable.user.name, feed_vote_post.feedable.user.account  %>
      <%= t "account.rated.#{feed_vote_post.feedable.user.account.gender}" %> обзор
    </div>
  <% end %>

  <div class='title'>
    <%= link_to feed_vote_post.feedable.voteable.title, feed_vote_post.feedable.voteable %>
  </div>
</div>
