<div class="affiche_show">

    <div class="breadcrumbs">
      <ul>
        <li>
          <a href="/" class='solid_light_blue'>Главная</a><span class='arrow'>&rarr;</span>
        </li>
        <li>
          <%= link_to t('affiche'), affiches_path, :class => 'solid_light_blue' %><span class='arrow'>&rarr;</span>
        </li>
      </ul>
    </div>

    <div class="main_info">
      <h1><%= resource.title %></h1>
      <h2>The Assassination of Jesse James by the Coward Robert Ford</h2>

      <div class='description'>
        <div class='poster'>
          <%= poster_image_tag_for(resource, 290, 390) %>
          <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
          <div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="button" data-yashareQuickServices="yaru,vkontakte,facebook,twitter,odnoklassniki,lj,gplus"></div>
        </div>

        <div class="info">
          <%= resource.description.html_safe %>
        </div>
      </div>

      <div class='trailer'>
        <%= resource.trailer_code %>
      </div>

      <div class='seance'>
        <h4>Сеансы</h4>
        <div class="seance_tabs">
          <ul>
            <% range = (Date.parse('21.05.2012')..Date.parse('27.05.2012')) %>
            <% range.each_with_index do |day, index| %>
              <li class='fake <%= 'active' if index==0 %>' id='target_t<%= index %>'>
                <a href="#"><span class='day'><%= l day, :format => '%e %b' %></span><span class="dow"><%= l(day, :format => '%A').mb_chars.downcase %></span></a>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="seances_wrapper">
          <table class="sortable" id='t1'>
            <thead>
              <tr>
                <th class='time'><a href='#' class='dashed_deep_blue'>Время</a></th>
                <th class='cinema'><a href='#' class='dashed_deep_blue'>Кинотеатр</a></th>
                <th class='hall'><a href='#' class='dashed_deep_blue'>Зал</a></th>
                <th class='amount'><a href='#' class='dashed_deep_blue'>Стоимость</a></th>
              </tr>
            </thead>
            <tbody>
              <%= render resource.showings %>
            </tbody>
          </table>
        </div>
      </div>

      <div class='comments'>
        <h4>Комментарии</h4>
        <div id="disqus_thread"></div>
        <script type="text/javascript">
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'znaigorod'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
             var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
             dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
             (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
           })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      </div>
    </div>
</div>
