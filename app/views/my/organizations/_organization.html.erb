<%= render :partial => 'tariffs', locals: { :resource => resource }  if defined?(params['controller']) %>
<div class='title'>
  <%= resource.title %>
</div>
<div class="main_block">
  <div class="info">
    <div>
      <span class="label">Адрес заведения:</span>
      <% if resource.address.present? %>
        <span class="value"><%= resource.address %></span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Телефон:</span>
      <% if resource.phone.present? %>
        <span class="value"><%= resource.phone %></span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Электронная почта:</span>
      <% if resource.email.present? %>
        <span class="value">
          <ul>
            <% resource.email.split(',').map(&:strip).each do |e| %>
              <li><%= mail_to e %></li>
            <% end %>
          </ul>
        </span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Сайт:</span>
      <% if resource.site.present? %>
        <span class="value"><%= link_to resource.site, resource.site %></span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Ссылки:</span>
      <% if resource.social_links.present? %>
        <ul>
          <% resource.social_links.each do |link| %>
            <li><span class="value"><%= link_to link.title, link.url, :target => '_blank' %></span></li>
          <% end %>
        </ul>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Безналичный расчёт:</span>
      <% if resource.non_cash.present? %>
        <span class="value"><%= resource.non_cash ? 'Есть' : 'Отсутствует'  %></span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Расписание работы:</span>
      <% if true %>
        <span class="value">
          <ul>
            <% resource.schedules.each do |schedule| %>
              <li <%= "class=holiday" if schedule.holiday %>>
                <span class='day'><%= schedule.short_human_day %></span>
                <%= "#{l(schedule.from, :format => "%H:%M")} &mdash; #{l(schedule.to, :format => "%H:%M")}".html_safe unless schedule.holiday %>
              </li>
            <% end %>
          </ul>
        </span>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <div>
      <span class="label">Категории:</span>
      <% if resource.organization_categories.present? %>
        <% resource.organization_categories.each do |category| %>
          <span class="value"><%= category.downcased_title %></span>
        <% end %>
      <% else %>
        <span class="blank">Не указано</span>
      <% end %>
    </div>

    <% if resource.can_service? 'logotype' %>
      <div class="logo">
        <% if resource.logotype_url.present? %>
          <%= image_tag resized_image_url(resource.logotype_url, 137, 137, { crop: '!', orientation: 'n' }) %>
        <% else %>
          <%= image_tag "public/organization_stub_poster_kind.jpg", :width => '137', :height => '100', :alt => resource.title, :title => resource.title %>
        <% end %>
      </div>
    <% end %>

    <% if resource.can_service? 'description_field' %>
      <div>
        <h3 class="label">Описание:</h3>
        <% if resource.description.present? %>
          <span class="value"><%= resource.html_description %></span>
        <% else %>
          <span class="blank">Не указано</span>
        <% end %>
      </div>
    <% end %>

    <% if resource.can_service? 'small_comment' %>
      <div>
        <h3 class="label">Краткое описание:</h3>
        <% if resource.comment.present? %>
          <span class="value"><%= resource.comment %></span>
        <% else %>
          <span class="blank">Не указано</span>
        <% end %>
      </div>
    <% end %>

    <% if resource.can_service? 'price_list' %>
      <div class="sections_wrapper">
        <span>Раздел с расценками</span>

          <div class='sections'>
              <% if resource.sections.any? %>
                <% resource.sections.order_by_position.each do |section| %>
                  <%= link_to section.title, my_organization_section_path(resource, section) %>
                <% end %>
              <% end %>
          </div>
      </div>

    <% end %>

    <% if resource.can_service? 'gallery' %>
      <div class='images'>
        <h3>Галерея изображений</h3>
          <% resource.gallery_images.each do |g| %>
            <%= image_tag g.file.url, :width => '137', :height => '100', :alt => resource.title, :title => resource.title %>
          <% end %>
      </div>
    <% end %>

    <% if resource.can_service?('brand') && resource.brand_for_content.present? %>
      <div class='brand'>
        <h3>Брендинг страницы</h3>
        <%= image_tag resource.brand_for_content.background_url, :width => '300' %>
        <br><%= resource.brand_for_content.color %>
      </div>
    <% end %>

  </div>
</div>

<div>
  <% if defined?(params['controller']) %>
    <div class="actions">
      <%= link_to "&larr; Назад".html_safe, :back %>
      <%= link_to 'Редактировать', edit_my_organization_path(resource) %>
      <%= link_to 'К заведениям', my_organizations_path %>
    </div>
  <% end %>
</div>
