<% content_for :account_content do %>
  <div class='feeds'>
    <div class="invitations header">
      <div class='clear'>
        <span class="panel"></span>
      </div>
      <h3>
        <% vfs_path = "/znaigorod/organizations/#{Time.now.strftime('%Y/%m/%d/%H-%M')}-#{SecureRandom.hex(4)}" %>
        <%= link_to "Мои заведения", new_my_organization_path(:params => {'organization[vfs_path]' => "#{vfs_path}"}), class: 'add_link' %>
      </h3>
      <%= link_to 'Добавить заведение', new_my_organization_path(:params => {'organization[vfs_path]' => "#{vfs_path}"}), class: :invitation_link if can? :new, Organization %>
    </div>
    <div id='events_filter'>
      <ul>
        <% %w[all moderation_to_published draft published].each do |state| %>
          <li>
            <%= link_to "##{state}" do %>
              <% unless state == 'all' %>
                <%= t(state, count: @organizations.by_state(state).total_count + @managed_organizations.by_state(state).count) %>
              <% else %>
                <%= t(state, count: @organizations.count + @managed_organizations.count) %>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>

    <div class='content'>
      <% %w[all moderation_to_published draft published].each do |state| %>
        <div id='<%= state %>' class='list'>
          <div class='organizations_main_page_list'>
            <% if @organizations.any? %>
              <ul class='posters_organizations'>
                <% unless state == 'all' %>
                  <% organization_list = @organizations.by_state(state) + @managed_organizations.by_state(state) %>
                <% else %>
                  <% organization_list = @organizations + @managed_organizations %>
                <% end %>
                <% organization_list.each do |organization| %>
                  <%= render :partial => 'list_item', locals: { organization: organization }  %>
                <% end %>
              </ul>
            <% else %>
              <p class='empty_items_list'>По заданным параметрам ничего не найдено ;(</p>
            <% end %>
          </div>
        </div>
      <% end %>
      <%= paginate @organizations %>
    </div>
    </div>
  </div>
  <%= render :partial => 'organizations/landing_content' %>
<% end %>
<%= render file: "my/accounts/wrapper" %>
