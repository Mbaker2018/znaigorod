<div class="item" id="ad_<%= post.id %>">
  <div class="post_item">
    <div class="title">
      <%= post.truncated_title_link(50) %>
    </div>
    <div class="details">
      <span class="first_line">
        <span class="show_tipsy comments" title="Комментарии"><%= post.comments.count %></span>
        <span class="show_tipsy likes" title="Понравилось"><%= post.likes_count %></span>
        <span class="show_tipsy visits" title="Просмотры"><%= post.page_visits.count %></span>
      </span>
    </div>
    <div class="post_date">
      <%= post.date %>
    </div>

    <div class="annotation">

      <%= render :partial => 'posts/poster', :locals => { :post => post } %>

      <%= post.content_for_index %>
    </div>

    <div class="badges">
      <%= link_to '', my_post_path(post), :class => 'edit_button show_tipsy', :title => 'Редактировать' %>

      <% if post.draft? %>
        <%= link_to '', my_post_path(post), :method => :delete, :class => :destroy, :remote => true, :confirm => 'Вы уверены? Обзор будет удален без возможности восстановления', :class => 'trash show_tipsy', :title => 'Удалить' %>
      <% end %>
    </div>
  </div>
</div>

