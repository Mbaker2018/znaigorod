<% content_for :yandex_map_scripts, javascript_include_tag('http://api-maps.yandex.ru/2.0.33/?load=package.full&lang=ru-RU') %>
<div class="account_show">
  <div class="left">
    <div class="image">
      <%= image_tag(resized_image_url(@account.avatar.url, 200, 200), size: '200x200', title: @account.title, alt: @account.title) %>
      <%= render 'my/accounts/avatar_form' %>
    </div>
    <h1><%= @account.title %></h1>
    <div class="properties">
      <%= link_to t("edit_profile"), edit_my_account_path %>
    </div>
    <div class="social_actions">
      <div class="user_menu">
        <div class="feeds_filter">
          <div class="all_feeds <%= "selected" if params[:controller] == "my/accounts" && (params[:activity].nil? || params[:activity] == "all") %>">
            <%= link_to content_tag(:span, 'Активность'), my_account_path() %>
          </div>
          <% if params[:controller] == "my/accounts" %>
            <div class="sub_filter">
              <div class="my_feeds <%= "selected" if params[:activity].present? && params[:activity] == "my" %>">
                <%= link_to content_tag(:span, 'Моя активность'), my_account_path(:activity => "my") %>
              </div>
              <div class="friends_feeds <%= "selected" if params[:activity].present? && params[:activity] == "friends" %>">
                <%= link_to content_tag(:span, 'Активность моих друзей'), my_account_path(:activity => "friends") %>
              </div>
            </div>
          <% end %>
          <div class="show_friends <%= "selected" if params[:controller] == "my/friends" %>">
            <a href="<%= my_account_friends_path() %>">
              <span class="counter"><%= @account.friends_count %></span>
              <span>Друзья</span>
            </a>
          </div>
        </div>

      </div>
    </div>

  </div>

  <div class="right">

    <div class="invitations_wrapper">
    <% if @account.last_visit_at? %>
      <div class='last_visit'>
        <% if @account.last_visit_at > DateTime.now - 5.minute %>
          сейчас на сайте
        <% else %>
          последнее посещение было <%= time_ago_in_words @account.last_visit_at %> назад
        <% end %>
      </div>
    <% end %>

    <h1><%= @account.title %></h1>

    <div class="account_info">
      <%= content_tag :div, "Возраст: #{I18n.t('account.age', :count => @account.age)}", :class => :row if @account.birthday? %>
      <%= content_tag :div, "Пол: #{@account.gender.text.mb_chars.downcase}", :class => :row unless @account.gender == 'undefined' %>
    </div>

    <% if @account.link_to_social.present? %>
      <div class='link_to_social'>
        <%= link_to('Профиль в социальной сети', @account.link_to_social, :rel => 'nofollow', :target => '_blank') %>
      </div>
    <% end %>
      <div class="invitations header">
        <%= link_to 'Добавить',
          new_invitation_path('invitation[kind]' => :inviter),
          :remote => true,
          :class => 'invitation_link',
          :data => { :title => 'Хочу пригласить', :target => '.inviter' } %>
        <span class="panel"></span>
        <span class="triangle"></span>
          <h3>
            <%= link_to 'Хочу пригласить',
              new_invitation_path('invitation[kind]' => :inviter),
              :remote => true,
              :data => { :title => 'Хочу пригласить', :target => '.inviter' } %>
            </h3>
          </div>

          <div class="invitations list">
            <ul class="inviter">
              <% if @account.invitations.inviter.without_invited.any? %>
                <% @account.invitations.inviter.without_invited.each do |invitation| %>
                  <%= render :partial => 'invitations/invitation', :locals => { :invitation => invitation } %>
                <% end %>
              <% else %>
                <li class="empty">Нет приглашений</li>
              <% end %>
            </ul>
          </div>

          <div class="invitations header">
            <%= link_to 'Добавить',
              new_invitation_path('invitation[kind]' => :invited),
              :remote => true,
              :class => 'invitation_link',
              :data => { :title => 'Жду приглашения', :target => '.invited' } %>
              <span class="panel"></span>
              <span class="triangle"></span>
              <h3>
                <%= link_to 'Жду приглашения',
                  new_invitation_path('invitation[kind]' => :invited),
                  :remote => true,
                  :data => { :title => 'Жду приглашения', :target => '.invited' } %>
                </h3>
              </div>

              <div class="invitations list">
                <ul class="invited">
                  <% if @account.invitations.invited.without_invited.any? %>
                    <% @account.invitations.invited.without_invited.each do |invitation| %>
                      <%= render :partial => 'invitations/invitation', :locals => { :invitation => invitation } %>
                    <% end %>
                  <% else %>
                    <li class="empty">Нет приглашений</li>
                  <% end %>
                </ul>
              </div>
            </div>

            <%= yield(:account_content) %>

          </div>
        </div>
