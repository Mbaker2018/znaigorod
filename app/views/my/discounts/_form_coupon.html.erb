<%= simple_form_for [:my, resource] do |f| %>
  <%= f.input :kind, :as => :check_boxes %>
  <%= f.input :title, :input_html => { :class => 'preview_title wide_input' } %>
  <%= f.input :description, :required => true, :input_html => { :id => :markitup_description } %>

  <div class="period">
    <%= f.input :constant, :input_html => { :class => 'switch_box' } %>
    <div class="switch_wrapper">
      <%= f.input :starts_at, :as => :date_picker, :wrapper_html => { :class => 'toggle' } %>
      <%= f.input :ends_at, :as => :date_picker, :wrapper_html => { :class => 'toggle' } %>
    </div>
  </div>

  <%= f.input :number, :input_html => { :class => 'medium_input' } if resource.new_record? %>
  <%= f.input :origin_price %>
  <%= f.input :discounted_price %>
  <%= f.input :price %>

  <div class="organization_wrapper">
    <%= f.input :place, :input_html => { :class => 'autosuggest wide_input' } %>
    <%= f.input :organization_id, :as => :hidden, :input_html => { :class => 'autosuggest_organization_id' } %>
    <%= link_to 'Удалить', '#', :remote => true, :class => 'clear_autosuggest_link' %>
  </div>

  <div class="submit">
    <%= f.submit 'Сохранить', :class => 'button' %>
    <%= link_to 'Отмена', :back %>
  </div>
<% end %>
