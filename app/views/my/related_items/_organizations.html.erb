<% @related_organizations.each do |organization| %>
  <li class='poster'>
    <div class="image">
      <%= image_tag organization.logotype_url, size: "66x66"  %>
    </div>
    <div class="details">
      <%= link_to organization.title, organization_url(organization) %>
      <div>
        <%= button_tag "Добавить", type: 'button', class: "js-button-add-related-item add_button", remote: true %>
      </div>
      <%= hidden_field_tag "hidden_id","organization_#{organization.id}" %>
    </div>
  </li>
<% end %>
