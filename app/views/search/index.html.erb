<div class="index">
  <div class="breadcrumbs">
    <ul>
      <li>
        <a href="/" class='solid_light_blue'>Главная</a><span class='arrow'>&rarr;</span>
      </li>
    </ul>
  </div>

  <h1>Результаты поиска<span class='result_count'>Найдено: <%= total %></span></h1>

  <div class="list">
    <% if collection.any? %>
      <% collection.each do |item| %>
        <%= render :partial => "#{item.class.superclass.name.underscore.pluralize}/item", :locals => { :item => item } %>
      <% end %>
    <% else %>
      <div class="empty">Ничего не найдено ;(</div>
    <% end %>
  </div>

  <%= paginate collection %>
</div>
