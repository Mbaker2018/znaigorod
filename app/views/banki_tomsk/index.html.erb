<div class="banki_tomska_left">
  <%= render :partial => 'banners/banner_1_2' %>

  <h1>Курс валют</h1>
  <table class="banki_tomsk_currency">
    <tr class="thead">
      <td rowspan = "2">Банк</td>
      <td colspan = "2">Доллар</td>
      <td colspan = "2">Евро</td>
    </tr>
    <tr class="thead">
      <% currency_filter.each do |key, filter|  %>
        <td><%= filter[0] %> <%= link_to filter[1].html_safe, banki_tomsk_path(currency: filter[2]) %></td>
      <% end %>
    </tr>
    <tbody>
      <% @exchange_rate.each do |rate| %>
        <tr>
          <td><%= link_to rate.bank, rate.bank_link %></td>
          <td><%= rate.usd_buy %></td>
          <td><%= rate.usd_sell %></td>
          <td><%= rate.euro_buy %></td>
          <td><%= rate.euro_sell %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1>Курсы драгоценных металлов</h1>
  <table class="banki_tomsk_metals">
    <tr class="thead">
      <td rowspan = "2">Банк</td>
      <td colspan = "2">Золото</td>
      <td colspan = "2">Серебро</td>
      <td colspan = "2">Платина</td>
      <td colspan = "2">Паладий</td>
    </tr>
    <tr class="thead">
      <% metal_filter.each do |key, filter|  %>
        <td><%= filter[0] %> <%= link_to filter[1].html_safe, banki_tomsk_path(currency: filter[2]) %></td>
      <% end %>
    </tr>
    <tbody>
      <% @metals.each do |metal| %>
        <tr>
          <td><%= link_to metal.bank, metal.bank_link %></td>
          <td><%= metal.gold_buy %></td>
          <td><%= metal.gold_sell %></td>
          <td><%= metal.silver_buy %></td>
          <td><%= metal.silver_sell %></td>
          <td><%= metal.platinum_buy %></td>
          <td><%= metal.platinum_sell %></td>
          <td><%= metal.palladium_buy %></td>
          <td><%= metal.palladium_sell %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="banki_tomska_right">
  <%= render :partial => 'commons/promotions' %>
</div>
