<% content_for :page_title do %>
  <%= @account.title.text_gilensize %>,
  ЗнайГород
<% end %>

<% content_for :meta_keywords, t('meta.account.keywords') %>
<% content_for :meta_description, t('meta.account.description') %>

<% content_for :extra_meta do %>
  <%= @account.tags_for_vk %>
<% end %>

<div class="account_show">
  <div class="left">
    <div class="image">
      <%= image_tag(resized_image_url(@account.avatar.url, 200, 200), size: '200x200', title: @account.title, alt: @account.title) %>
    </div>

    <div class="social_actions">
      <% if current_user.nil? || (current_user.account != @account.model) %>
        <ul class="user_actions">
          <li><%= link_to t('new_message'), new_my_private_message_path(account_id: @account.id), class: 'add_private_message', remote: true %></li>
          <%= render 'friends/friendship' %>
          <%= render :partial => 'invitations/account_link', :locals => { :kind => :inviter, :invited_id => @account.id } %>
          <%= render :partial => 'invitations/account_link', :locals => { :kind => :invited, :invited_id => @account.id } %>
        </ul>
      <% end %>

      <% if @friends.any? %>
        <div class="friends_counter">
          <div class="floatl">Друзья</div>
          <div class="floatr"><%= t('account_friends', count: @friends.total_count) %></div>
        </div>
        <div class="friends list">
          <%= render partial: 'friends/account_friends', locals: { collection: @friends } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="right">
    <div class='last_visit'>
      последнее посещение было
      <%= l(@account.users.first.current_sign_in_at, :format => '%d %B %Y %H:%M') %>
    </div>

    <h1><%= @account.title %></h1>

    <div class="account_info">
      <%= content_tag :div, "День рождения: #{l(@account.birthday)}", :class => :row if @account.birthday? %>
      <%= content_tag :div, "Пол: #{@account.gender.text.mb_chars.downcase}", :class => :row unless @account.gender == 'undefined' %>
    </div>

    <% if @account.link_to_social.present? %>
      <div class='link_to_social'>
        <%= link_to('Профиль в социальной сети', @account.link_to_social, :rel => 'nofollow', :target => '_blank') %>
      </div>
    <% end %>

    <div class="invitations_wrapper">
      <div class="invitations header">
        <h3>Приглашает</h3>
      </div>

      <div class="invitations list">
        <ul class="inviter">
          <% if @account.invitations.inviter.without_invited.select(&:actual?).any? %>
            <%= render :collection => @account.invitations.inviter.without_invited.select(&:actual?), :partial => 'invitations/invitation' %>
          <% else %>
            <li class="empty">Нет приглашений</li>
          <% end %>
        </ul>
      </div>

      <div class="invitations header">
        <h3>Ждет приглашения</h3>
      </div>

      <div class="invitations list">
        <ul class="invited">
          <% if @account.invitations.invited.without_invited.select(&:actual?).any? %>
            <%= render :collection => @account.invitations.invited.without_invited.select(&:actual?), :partial => 'invitations/invitation' %>
          <% else %>
            <li class="empty">Нет приглашений</li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class='feeds'>
      <div class='line'>
        <h3>
          Новости
        </h3>
      </div>
      <div class='filters_feed'>
        <ul>
          <li>
            <a href="#">Все</a>
          </li>
          <li>
            <a href="#">Комментарии</a>
          </li>
          <li>
            <a href="#">Афиши</a>
          </li>
          <li>
            <a href="#">Друзья</a>
          </li>
          <li>
            <a href="#">Приглашения</a>
          </li>
          <li>
           <a href="#">Нравится</a>
          </li>
        </ul>
      </div>
      <ul>
        <%= render @feeds %>
      </ul>
      <% unless @feeds.first_page? && @feeds.last_page? %>
        <div class="pagination">
          <%= link_to '&uarr;'.html_safe, '#', :class => "toggler #{ 'disabled' if @feeds.first_page? }", :remote => true %>
          <%= link_to '&darr;'.html_safe, account_feeds_path(@account, :page => @feeds.current_page + 1), :class => "next_page #{ 'disabled' if @feeds.last_page? }", :remote => true %>
        </div>
      <% end %>
    </div>

  </div>
</div>
