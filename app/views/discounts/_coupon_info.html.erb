<div class="<%= discount.class.name.underscore %>">
  <strong>Скидка</strong>
  <span class="discount"><%= discount.discount %>%</span>

  <% if discount.price.zero? %>
    <span class="price free">бесплатно</span>
  <% else %>
    <strong>за</strong>
    <span class="price">
      <%= number_to_currency(discount.price, :unit => 'р.', :precision => 0) %>
    <% end %>
  </span>
</div>
