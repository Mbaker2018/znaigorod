<div class="ajaxed_item">
  <%= simple_form_for [@contest, @work] do |f| %>
    <%= f.error :base %>
    <%= f.input :image %>
    <%= f.input :agree, :as => :boolean %>
    <%= @contest.agreement %>

    <%= f.submit 'Добавить' %>
    <%= link_to 'Отмена', '#', :class => 'cancel' %>
  <% end %>
</div>
