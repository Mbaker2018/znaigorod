<div class='filter_header'>
  <% if page_meta %>
    <h1><%= page_meta.header.squish.html_safe %></h1>
  <% elsif @presenter.page_header.blank? %>
    <h1><%= t('meta.organizations.page_header') %></h1>
  <% else %>
    <h1><%= @presenter.page_header %></h1>
  <% end %>
  <%= link_to 'Добавить организацию', organizations_add_path, class: [:button, :add_organization] %>
</div>

<div class="filter_and_share">
  <!--noindex-->
  <div class='presentation_filters organization'>
    <%= render :partial => 'commons/presentation_filters' %>
  </div>

  <% if params[:kind] || params[:categories] %>
    <div class="view_by">
      <div class="tile_view <%= view_type == 'tile' ? 'selected' : '' %>"><%= link_to "Плиточный вид", params.merge({:view_type => "tile"}), class: :view_link %></div>

      <div class="list_view <%= view_type == 'list' ? 'selected' : '' %>"><%= link_to "Списочный вид", params.merge({:view_type => "list"}), class: :view_link %> </div>
    </div>
  <% end %>

  <div class="search_field">
    <%= text_field_tag :search, '', class: :search_field, placeholder: 'Поиск организации' %>
    <%= button_tag :search_button, class: :search_button %>
    <%= link_to "Расширенный поиск &darr;".html_safe, '#', class: [:extended_search, 'js-extended-search'] %>
  </div>
  <!--/noindex-->
</div>
