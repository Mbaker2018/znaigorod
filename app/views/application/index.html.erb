<div class="index">
  <div class="breadcrumbs">
    <ul>
      <li>
        <a href="/" class='solid_light_blue'>Главная</a><span class='arrow'>&rarr;</span>
      </li>
    </ul>
  </div>

  <h1><%= t collection.first.class.superclass.model_name.human %></h1>

  <div class="filters">
    <fieldset>
      <legend>Фильтр</legend>
      <%= render :partial => "filters" %>
    </fieldset>
  </div>

  <div class="list">
    <% if collection.any? %>
      <%= render :partial => 'item', :collection => collection %>
    <% else %>
      <div class="empty">Ничего не найдено ;(</div>
    <% end %>
  </div>

  <%= paginate collection %>
</div>



