<style>
  body {
    font-family: 'Verdana'
}

.teaser_wrapper {
  width: 876px;
  overflow: hidden;
}

.teaser_wrapper .label {
  background-color: #f45800;
  color: white;
  display: table-row;
  font-size: 10px;
  text-align: center;
  width: 95px;
}

.teaser_wrapper .label span {
  display: table-cell;
  vertical-align: middle;
  padding: 0 10px;
}

.teaser_wrapper .label:after {
  background: white;
  float: right;
  border: 8px solid transparent;
  border-right: 0;
  border-left-color: #f45800;
  content: "";
  height: 0;
  width: 0;
}

.teaser_wrapper .teaser_item {
  background-color: #ffe0bd;
  border-radius: 3px;
  border: 1px solid #ff9e43;
  float: left;
  display: table-row;
  margin: 0 5px 0 0;
  width: 280px;
}

.teaser_item .left {
  margin-right:10px;
  display: table-cell;
  text-align:center;
  width: 104px;
  height: 100%;
  padding: 10px;
}

.teaser_item .left a {
  display: block;
  height: <%= @teaser.image_height %>;
  text-indent: -9999px;
  width: <%= @teaser.image_width %>;
}

.teaser_item .right {
  height: 100%;
  width: 100%;
  padding: 10px 10px 10px 0;
  display: table-cell;
  vertical-align: middle;
}

.teaser_item .right .link a {
  color: #269aee;
  font-size: 13px;
  line-height: 19px;
}

.teaser_item .right .author {
  font-size: 11px;
}
</style>

<div class='teaser_wrapper'>
  <div class="label">
    <span>znaigorod.ru</span>
  </div>

  <% @teaser.teaser_items.order_by_id.each do |item| %>
    <div class='teaser_item'>
      <div class="left">
        <%= link_to item.text, item.try(:url), :style => "background-image: url('#{resized_image_url(item.image_url, @teaser.image_width, @teaser.image_height)}')" %>
      </div>

      <div class="right">
        <div class="link">
          <%= link_to item.text.try(:truncate, @teaser.text_length), item.try(:url), target: '_blank' %>
        </div>
        <div class="author">
          <span>znaigorod.ru</span>
        </div>
      </div>
    </div>
  <% end %>
</div>
