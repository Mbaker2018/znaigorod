<%= f.input :title,       :as => :string %>
<%= f.input :category,    :as => :string %>
<%= f.input :description %>
<%= f.input :offer %>
<%= f.input :feature %>
<%= f.input :cuisine,     :as => :string %>
<%= f.input :payment,     :as => :string %>
<%= f.input :phone,       :as => :tel %>
<%= f.input :email,       :as => :email %>
<%= f.input :site,        :as => :url %>

<%= field_set_tag "<i class='icon-home' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.address')}".html_safe do %>
  <% f.object.build_address unless f.object.address %>
  <%= f.simple_fields_for :address do |address_form| %>

    <div class="row-fluid control-group">
      <div class="span5">
        <%= address_form.input :street, :input_html => { :class => 'span4'} %>
      </div>
      <div class="span3">
        <%= address_form.input :house, :input_html => { :class => 'span1'} %>
      </div>
    </div>

    <div class="row-fluid control-group">
      <div class="span5">
        <%= address_form.input :latitude, :input_html => { :class => 'span2'}, :wrapper => false %>
      </div>
      <div class="span4">
        <%= address_form.input :longitude, :input_html => { :class => 'span2'}, :wrapper => false %>
      </div>
    </div>

    <div class="row" style='margin: 0 0 20px'>
      <div class="span4">&nbsp;</div>
      <%= link_to "<i class='icon-map-marker'></i>&nbsp;Получить координаты".html_safe, '#', :class => 'get_coordinates btn btn-success span2' %>
    </div>
    <%= render :partial => 'commons/map' %>
  <% end %>
<% end %>

<%= field_set_tag "<i class='icon-resize-full' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.halls')}".html_safe do %>
  <%= f.simple_fields_for :halls do |hall_form| %>
    <%= hall_form.input :title %>
    <%= hall_form.input :seating_capacity %>
    <%= hall_form.link_to_remove t('remove_this_hall') %>
  <% end %>
  <p><%= f.link_to_add t('add_a_hall'), :halls %></p>
<% end %>

<%= field_set_tag "<i class='icon-time' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.schedules')}".html_safe do %>
  <%= f.simple_fields_for :schedules do |schedule_form| %>
    <%= schedule_form.input :day, :as => :select, :collection => Schedule.days_for_select, :label => false %>
    <%= schedule_form.input :from, :as => :string, :input_html => { :class => 'span1' } %>
    <%= schedule_form.input :to,   :as => :string, :input_html => { :class => 'span1' } %>
  <% end %>
<% end %>
