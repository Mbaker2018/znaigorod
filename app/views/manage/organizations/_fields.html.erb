<%= f.input :title,       :as => :string %>
<%= f.input :category,    :as => :string %>
<%= f.input :description %>
<%= f.input :offer %>
<%= f.input :feature %>
<%= f.input :cuisine,     :as => :string %>
<%= f.input :payment,     :as => :string %>
<%= f.input :phone,       :as => :tel %>
<%= f.input :email,       :as => :email %>
<%= f.input :site,        :as => :url %>

<%= field_set_tag "<i class='icon-home' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.address')}".html_safe do %>
  <% f.object.build_address unless f.object.address %>
  <%= f.simple_fields_for :address %>
<% end %>

<%= field_set_tag "<i class='icon-resize-full' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.halls')}".html_safe do %>
  <%= f.simple_fields_for :halls %>
  <%= f.link_to_add t('add_a_hall'), :halls %>
<% end %>

<%= field_set_tag "<i class='icon-time' style='margin: 5px 5px 0 0'></i>#{t('simple_form.fieldset.schedules')}".html_safe do %>
  <%= f.simple_fields_for :schedules %>
<% end %>
