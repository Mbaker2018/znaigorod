<div>
  <span class="label"><%= object.class.human_attribute_name(field) %>:</span>
  <% if object.send(field).present? %>
      <% if %w[default maximal floors lounges].include?(field) %>
        <% if object.send(field).zero? %>
          <span class="blank">Не указано</span>
        <% else %>
          <span class="value"><%= object.send(field) %></span>
          <% end %>
      <% else %>
        <span class="value"><%= object.send(field).zero? ? "Бесплатно" : "#{object.send(field)} руб." %></span>
      <% end %>
  <% else %>
    <span class="blank">Не указано</span>
  <% end %>
</div>
