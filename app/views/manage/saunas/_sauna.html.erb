<div class='type'>
  <%= render partial: 'manage/organizations/suborganization', locals: { suborganization: sauna } %>

  <div class="sauna_info">
    <%= render :partial => "manage/saunas/info", :locals => { :sauna => sauna } %>

    <fieldset>
      <legend>3D-тур</legend>
      <% if sauna.virtual_tour %>
        <div>
          <span class="label"><%= VirtualTour.human_attribute_name('link') %>:</span>
          <span class="value"><%= content_tag :abbr, truncate(sauna.virtual_tour_link, :length => 20), :title => sauna.virtual_tour_link %></span>
        </div>
        <%= image_tag_for(sauna.virtual_tour.attachment_url, 334, 164, true, 'n') if sauna.virtual_tour.attachment_url? %>
      <% else %>
        не указано
      <% end %>
    </fieldset>

    <fieldset>
      <legend>Залы</legend>
      <ul>
        <% sauna.sauna_halls.each do |hall| %>
          <li>
            <%= link_to (hall.title.present? ? hall.title : "Без названия"), [:manage, @organization, :sauna, hall] %>
          </li>
        <% end %>
      </ul>
      <% vfs_path = "/znaigorod/sauna_halls/#{Time.now.strftime('%Y/%m/%d/%H-%M')}-#{SecureRandom.hex(4)}" %>
      <%= link_to 'Добавить зал', new_manage_organization_sauna_sauna_hall_path(sauna.organization, 'sauna_hall[vfs_path]' => vfs_path) %>
    </fieldset>
  </div>
</div>

