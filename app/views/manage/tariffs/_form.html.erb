<%= simple_form_for [:manage, @tariff] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price_for_month %>
  <%= f.input :price_for_six_months %>
  <%= f.input :price_for_year %>
  <h4>Разрешить услуги</h4>
  <%= f.input :logotype, as: :boolean %>
  <%= f.input :tour3d, as: :boolean%>
  <%= f.input :description_field, as: :boolean%>
  <%= f.input :gallery, as: :boolean%>
  <%= f.input :attachment_files, as: :boolean%>
  <%= f.button :submit, 'Сохранить тариф' %>
<% end %>
<%= link_to 'Все тарифы', manage_tariffs_path %>
