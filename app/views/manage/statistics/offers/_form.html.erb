<%= simple_form_for [:manage, :statistics, resource], :remote => true, :html => { :validate => true } do |f| %>
  <%= f.input :state_event, :input_html => { :value => :approve }, :as => :hidden %>
  <%= f.input :our_stake %>
  <%= f.input :organization_stake %>
  <%= f.submit 'Сохранить' %>
  <%= link_to "отмена", '#', :class => 'cancel' %>
<% end %>
