<h3>Обзоры на главной странице</h3>

<ul class="main_page_reviews">
  <% @main_page_reviews.each do |main_page_review| %>
    <li>
      <% if main_page_review.review %>
        <% decorated_review = ReviewDecorator.new(main_page_review.review) %>
          <div class="image">
            <%= image_tag(decorated_review.annotation_image(100, 100), :size => "100x100") %>
          </div>

          <div>
            <%= link_to decorated_review.title %>
          </div>

          <div>
            Действителен до <%= l main_page_review.expires_at, :format => :long %>
          </div>

          <div>
            <%= link_to 'Выбрать другой обзор', edit_manage_main_page_review_path(main_page_review) %>
            <%= link_to 'Освободить место', manage_main_page_review_path(main_page_review, 'main_page_review[review_id]' => ''), :method => :put %>
          </div>
      <% else %>
        <div>
          Обзор не выбран
          <%= link_to 'Выбрать обзор', edit_manage_main_page_review_path(main_page_review) %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
