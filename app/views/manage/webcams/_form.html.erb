<% content_for :yandex_map_scripts, javascript_include_tag('http://api-maps.yandex.ru/2.0.34/?load=package.full&lang=ru-RU') %>

<%= simple_form_for [:manage, @webcam] do |f| %>
  <%= content_tag :p, @webcam.errors.full_messages.join(', '), class: :full_error__messages if @webcam.errors.messages.present? %>
  <%= f.input :kind, placeholder: 'тут выбрать надо...' %>
  <%= f.input :title, as: :string, placeholder: 'Музей истории Томска' %>
  <%= f.input :url, as: :string, placeholder: 'http://cam.tomsk.ru/stream.cgi' %>
  <%= f.input :parameters, as: :string, placeholder: 'rate=0&user=user&pwd=pwd' %>
  <%= f.input :cab, as: :string, placeholder: 'http://cam.tomsk.ru/control.cab' %>
  <%= f.input :snapshot_url, as: :string, placeholder: 'http://stream.znaigorod.ru/img/cam1hires.jpg' %>
  <%= f.input :width, placeholder: '640' %>
  <%= f.input :height, placeholder: '480' %>
  <%= f.input :address, as: :string, placeholder: 'ул. Бакунина, 3' %>
  <div id='webcam_map' data-latitude='56.493246' data-longitude='84.982112'></div>
  <%= f.input :latitude, placeholder: '56.488746', :readonly => true %>
  <%= f.input :longitude, placeholder: '84.954833', :readonly => true %>
  <%= f.input :state %>
  <%= f.input :our_cam %>
  <div class='published actions'>
    <%= f.submit "Сохранить" %>
    <%= link_to 'Удалить'.html_safe, resource_path, method: :delete, confirm: 'Уверены что хотите удалить?', class: :destroy unless resource.new_record? %>
  </div>
<% end %>
