<h3>Promotion for <%= @promotion %></h3>

<h4>Places</h4>

<div>
  <%= link_to 'New Place', new_manage_promotion_promotion_place_path(@promotion) %>
</div>

<ul>
  <% @promotion.promotion_places.each_with_index do |promotion_place, index| %>
    <li>
      <h5><%= "Place ##{index + 1}" %></h5>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to 'Back to Promotions', manage_promotions_path %>
</div>
