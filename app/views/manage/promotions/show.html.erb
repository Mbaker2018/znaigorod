<h3>Promotion for <%= @promotion %></h3>

<h4>Places</h4>

<div>
  <%= link_to 'New Place', new_manage_promotion_promotion_place_path(@promotion) %>
</div>

<ul>
  <% @promotion.promotion_places.each_with_index do |promotion_place, index| %>
    <li>
      <h5><%= "Place ##{index + 1}" %></h5>

      <ul>
        <% promotion_place.place_items.each do |place_item| %>
          <li>
            <%= place_item %>
            <%= link_to 'Edit', [:edit, :manage, place_item] %>
            <%= link_to 'Delete', [:manage, place_item], :confirm => 'Are you sure?', :method => :delete %>
          </li>
        <% end %>
      </ul>

      <div>
        <%= link_to 'New Item', new_manage_promotion_place_place_item_path(promotion_place) %>
      </div>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to 'Back to Promotions', manage_promotions_path %>
</div>
