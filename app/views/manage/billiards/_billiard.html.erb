<div class="type">
  <%= render partial: 'manage/organizations/suborganization', locals: { suborganization: billiard } %>

  <fieldset>
    <legend>Столы</legend>
    <ul>
      <% billiard.pool_tables.each do |pool_table| %>
        <li>
          <%= link_to pool_table.title, [:edit, :manage, @organization, :billiard, pool_table] %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'Добавить стол', new_manage_organization_billiard_pool_table_path(billiard.organization) %>
  </fieldset>
  <div>
    <% billiard.images.each do |image| %>
      <%= image_tag(resized_image_url(image.url, 100, 100, false), :alt => image.description, :title => image.description) %>
      <%= link_to "Удалить", manage_billiard_image_path(billiard, image), :method => :delete, :confirm => 'Вы уверены?' %>
    <% end %>
  </div>
</div>
