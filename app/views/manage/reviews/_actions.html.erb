<div class="actions">
  <%= link_to 'Опубликовать', publish_manage_review_path(@review.id), :method => :put if @review.draft? || @review.moderating? %>
  <%= link_to 'В черновики', draft_manage_review_path(@review.id), :method => :put unless @review.draft? %>
  <%= link_to 'Удалить', manage_review_path(@review.id), :confirm => 'Вы уверены?', :method => :delete %>
  <%= link_to 'Редактировать', edit_manage_review_path(@review.id) %>
  <%= link_to 'Изменить постер', poster_edit_manage_review_path(@review.id) %>
  <%= link_to 'Редактировать фотографии', images_add_manage_review_path(@review.id) %>
  <%= link_to 'Добавить Webanketa', new_manage_review_webanketa_path(@review.id) %>
  <%= link_to 'Посмотреть в публичном виде', review_path(@review) %>
</div>
