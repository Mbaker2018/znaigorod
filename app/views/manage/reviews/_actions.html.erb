<div class="actions">
  <% if @review.draft? %>
    <%= link_to 'Опубликовать', publish_manage_review_path(@review), :method => :put %>
  <% else %>
    <%= link_to 'В черновики', draft_manage_review_path(@review), :method => :put %>
  <% end %>
  <%= link_to 'Удалить', manage_review_path(@review), :confirm => 'Вы уверены?', :method => :delete %>
  <%= link_to 'Редактировать', edit_manage_review_path(@review) %>
  <%= link_to 'Изменить постер', poster_edit_manage_review_path(@review) %>
  <%= link_to 'Загрузить фотогарфии', images_add_manage_review_path(@review) %>
</div>
