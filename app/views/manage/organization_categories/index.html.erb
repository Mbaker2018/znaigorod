<h1>Категории организаций <%= link_to '(Новая категория)', new_manage_organization_category_path %></h1>
<div class="organization_category_sort">
  <form class='js-sortable' data-sort='<%= sort_manage_organization_categories_path %>'>
    <ul class="organization_organization_categories">
      <% OrganizationCategory.roots.order(:position).each do |root| %>
        <li class="label">
          <span><%= link_to "+", "#", :class => "js-open-list open_list plus" %></span>
          <%= link_to root.title, manage_organization_category_path(root) %>
          <div class='sortable_handle'>&#8597;</div>
          <%= hidden_field :position, root.id, :class => :position, :value => root.position %>
        </li>
        <ul class="children closed">
          <% root.children.order(:position).each do |child| %>
            <li class="label">
              <%= link_to child.title, manage_organization_category_path(child) %>
              <div class='sortable_handle'>&#8597;</div>
              <%= hidden_field :position, child.id, :class => :position, :value => child.position %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  </form>
</div>
