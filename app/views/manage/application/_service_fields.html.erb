<%= f.input :category_list, :as => :check_boxes, :collection => f.object.available_categories, :checked => f.object.categories, :wrapper_html => { :class => :category_list } %>
<%= f.input :title %>
<%= f.input :feature %>
<%= f.input :offer_list, :as => :check_boxes, :collection => f.object.available_offers, :checked => f.object.offers, :wrapper_html => { :class => :category_list } %>
<%= f.input :description, :input_html => { :class => 'service_description' } %>
<%= f.input :age %>

<%= f.simple_fields_for :price do |pf| %>
  <%= pf.input :kind, :as => :select, :include_blank => false %>
  <%= pf.input :count %>
  <%= pf.input :period %>
  <%= pf.input :value %>
<% end %>

<%= f.link_to_remove 'Удалить эту услугу' %>
