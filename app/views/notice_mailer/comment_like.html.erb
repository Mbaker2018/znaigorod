<% content_for :content do %>
  <tr align="left">
    <td align="left" valign="top">
      <table class="one columns">
        <tr align="left">
          <td align="left" valign="top">
            <a href="<%= account_path @vote.user.account, :only_path => false  %>">
              <img src="<%= resized_image_url(@vote.user.account.avatar.url, 30, 30) %>" align="left" />
            </a>
          </td>
        </tr>
      </table>
    </td>
    <td id="right_content" align="left" valign="top">
      <table class="nine columns">
        <tr align="left">
          <td class="line_height" align="left" valign="top">
            <a href="<%= account_path @vote.user.account, :only_path => false %>"><%= @vote.user.account.title %></a> <span><%= t "notice_mailer.liked_your_comment.#{@vote.user.account.gender}" %> </span>

              <% if @vote.voteable.commentable.is_a?(Work) %>
                <%= link_to (@vote.voteable.commentable.title.present? ? @vote.voteable.commentable.title : @vote.voteable.commentable.slug), work_path([@vote.voteable.commentable.contest, @vote.voteable.commentable], :only_path => false) %>
              <% end %>
              <% %w[afisha discount organization post].each do |item| %>
                <% if @vote.voteable.commentable.is_a?(item.camelize.constantize) %>
                  <%= link_to @vote.voteable.commentable.title, send("#{item}_path", @vote.voteable.commentable, :only_path => false) %>
                <% end %>
              <% end %>

          </td>
        </tr>
        <tr align="left">
          <td id="time" class="line_height" align="left" valign="top">
            <span><%= l(@vote.created_at, format: "%d %B %Y, %k:%M") %></span>
          </td>
        </tr>
        <tr align="left">
          <td align="left" valign="top">
            <span><%= @vote.voteable.body.truncated.as_html if @vote.voteable.body? %></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr align="left">
    <td id="whitespace" align="left" valign="top"></td>
  </tr>
<% end %>
