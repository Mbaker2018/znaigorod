<div class="item">
  <h3><%= link_to item.title, item, :class => 'solid_light_blue' %><span class='category'><%= item.class.model_name.human %></span></h3>
  <div class="poster">
    <%= link_to  item do %>
      <% if item.images.any? %>
        <%#= link_to image_tag_for(item.poster_url, 137, 185), affiche_path(item) %>
      <% else %>
        <%= image_tag "eat/no_photo#{1 + rand(5)}.jpg", :width => '137', :height => '185', :alt => item.title, :title => item.title %>
      <% end %>
    <% end %>
  </div>
  <div class="additional">
    <ul>
      <li>
        <span class="label">Адрес</span>
        <%= item.address %>
      </li>
      <li>
        <span class="label">Телефон</span>
        <%= item.phone %>
      </li>
      <% if item.feature? %>
        <li>
          <span class="label">Особенности</span>
          <%= item.feature %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
