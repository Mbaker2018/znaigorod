<div class="item">
  <h3>
    <%= link_to item.title, item, :class => 'solid_light_blue' %>
    <% item.categories.split(',').map(&:squish).each do |c| %>
      <span class='category'><%= c %></span>
    <% end %>
  </h3>
  <%= render :partial => "#{item.class.model_name.pluralize.underscore}/index_poster", :locals => { :item => item } %>
  <div class="additional">
    <div class="seances_wrapper">
      <ul>
        <li>
          <span class="label">Адрес</span>
          <%= item.address %>
        </li>
        <li>
          <span class="label">Телефон</span>
          <%= item.phone %>
        </li>
        <% if item.feature? %>
          <li>
            <span class="label">Особенности</span>
            <%= item.feature %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
