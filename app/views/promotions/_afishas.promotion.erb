<div class="place-header">
  <span class="place-title">
    %title%
  </span>
  <span class="place-counter">
    <%= link_to afisha_index_path do %>
      все <%= presenter.total_count %>
    <% end %>
  </span>
</div>

<div class="place-content afishas">
  <ul>
    <% presenter.decorated_collection.each do |item| %>
      <li>
        <div class='image'>
        <%= link_to image_tag(resized_image_url(item.poster_url, 50, 67),
                              :size => '50x67',
                              :title => item.title.text_gilensize,
                              :alt => item.title.text_gilensize),
                              afisha_show_path(item) %>
        </div>
        <div class='title'><%= link_to item.title.text_gilensize, afisha_show_path(item) %></div>
        <div class='closest'><%= item.when_with_price %></div>
      </li>
    <% end %>
  </ul>
</div>
