<div class="place-header">
  <span class="place-title with-counter">
    <%= link_to '%item_url%' do %>
      %title%
    <% end %>
  </span>
  <span class="place-counter">
    <%= link_to '%item_url%' do %>
      все <%= presenter.total_count %>
    <% end %>
  </span>
</div>

<div class="place-content reviews questions">
  <ul>
    <% presenter.decorated_collection.each do |item| %>
      <li>
        <div class='image'>
        <%= image_tag item.account.avatar.url, :size => '35x35' %>
        </div>
        <div class='title'>
          <%= link_to truncate(item.title.text_gilensize, :length => 35), question_path(item), :title => item.title.text_gilensize %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
