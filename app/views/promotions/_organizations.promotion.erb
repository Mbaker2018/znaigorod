<div class="place-header">
  <span class="place-title with-counter">
    <%= link_to '%item_url%' do %>
      %title%
    <% end %>
  </span>
  <span class="place-counter">
    <%= link_to '%item_url%' do %>
      все <%= presenter.total_count %>
    <% end %>
  </span>
</div>

<div class="place-content organizations js-right-block">
  <ul>
    <% @collection.each do |item| %>
      <li>
        <div class='image'>
          <%= link_to organization_path(item) do %>
            <% if item.logotype_url? %>
              <%= image_tag resized_image_url(item.poster_url, 50, 50, :watermark => false), :size => '50x50', :alt => item.title.text_gilensize %>
            <% else %>
              <span class='stub_poster <%= item.priority_suborganization_kind %>'></span>
            <% end %>
          <% end %>
        </div>
        <div class='clearfix'>
          <div class='title'><%= link_to item.title.text_gilensize, organization_path(item) %></div>
          <span class="fa fa-map-marker fa-orange inline-block"></span>
          <%= content_tag :div, item.truncated_address_link, :class => 'places inline-block' if item.truncated_address_link.present? %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
