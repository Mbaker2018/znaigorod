<li class='item'>
  <div class="left_questions">
    <div class="avatar">
      <%= render :partial => 'accounts/avatar',
        :locals => { :account => item.account, :width => 35, :height => 35, :title => item.account } %>
    </div>

    <div class="details">
      <div class="title">
        <%= link_to item.title, question_path(item) %>
      </div>

      <div class="other_details">
        <%= link_to item.account.title, item.account %>
        <span>
          в категориях:
          <% item.categories.values.each_with_index do |category, i| %>
            <%= link_to category.text, send("questions_#{category.value}_path") %> <% unless i == item.categories.values.count - 1 %>, <% end %>
            &nbsp;
          <% end %>
        </span>
        <%= time_ago_in_words(item.created_at) %> назад
      </div>
    </div>
    <div style='clear: both'></div>

    <%= link_to 'Ответить', question_path(item), :class => 'answer_link' %>

    <div class="info">
      <span class="show_tipsy fa fa-comments" title="Комментарии"> <%= item.comments.count %></span>
      <span class="show_tipsy fa fa-heart" title="Понравилось"> <%= item.likes_count %></span>
      <span class="show_tipsy fa fa-eye" title="Просмотры"> <%= item.page_visits.count %></span>
    </div>
  </div>
</li>
