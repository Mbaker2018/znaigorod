<% content_for :page_title, @contest.title.excerpt %>

<% content_for :extra_meta do %>
  <meta property='og:site_name' content='ЗнайГород - конкурс' />
  <meta property='og:title' content='Конкурс ЗнайГорода «<%= @contest.title %>' />
  <meta property='og:url' content='<%= contest_url(@contest) %>' />
  <meta property='og:image' content='<%= resized_image_url(@contest.og_image_url, 130, 63) %>' />
  <% if @contest.og_description? %>
    <meta property='og:description' content='<%= @contest.og_description.squish %>' />
  <% end %>

  <meta name='twitter:site' content='@znaigorod' />
  <meta name='twitter:title' content='Конкурс ЗнайГорода «<%= @contest.title %>' />
  <meta name='twitter:url' content='<%= contest_url(@contest) %>' />
  <meta name='twitter:image:src' content='<%= resized_image_url(@contest.og_image_url, 130, 63) %>' />
<% end %>

<div class='contest <%= @contest.slug %>'>
  <h1><%= @contest.title.excerpt %></h1>
  <div class='description'>
    <%= @contest.description.as_html %>
  </div>
  <div class='share_and_likes'>
    <%= render :partial => 'commons/share_and_like_this', :locals => { :url => contest_url(@contest) } %>
  </div>

  <% if @contest.slug == 'vyigray-novogodnyuyu-noch-s-chempionami-vysshey-ligi-kvn-1998-goda-deti-leytenanta-shmidta' %>
    <div class='winners'>
      <h2>Победители</h2>
      <ul>
        <li class='first'>
          <div class='title gold'>Первое место</div>
          <div class='image'><img alt='' height='278' src='http://storage.znaigorod.ru/files/58029/278-278!mn/DSC_3676.jpg' width='278'></div>
          <div class='contest_work_vk_like_on_list'>278 голосов</div>
        </li>
        <li class='second'>
          <div class='title silver'>Второе место</div>
          <div class='image'><img alt='' height='278' src='http://storage.znaigorod.ru/files/57059/278-278!mn/image002.jpg' width='278'></div>
          <div class='contest_work_vk_like_on_list'>175 голосов</div>
        </li>
        <li class='third'>
          <div class='title bronze'>Третье место</div>
          <div class='image'><img alt='Мишенька с мамой резвится' height='278' src='http://storage.znaigorod.ru/files/57068/278-278!mn/DSC_1247.jpg' width='278'></div>
          <div class='contest_work_vk_like_on_list'>205 голосов</div>
        </li>
      </ul>
    </div>
    <% end %>

  <% if @works.any? %>
    <div class='works ajaxed_voteable'>
      <h2>Участники</h2>
      <ul>
        <%= render :partial => 'works/list' %>
      </ul>
    </div>
  <% end %>
</div>

<%= paginate @works %>
