<% collection.each_slice(3).with_index do |review_slice,index| %>
  <% review_slice.each do |review| %>
    <li class="item"><%= render :partial => 'reviews/poster', :locals => { :review => review, :height => height, :width => width } %></li>
  <% end %>
  <%= render :partial => 'commons/promo_discounts', :locals => {:type => 'review'} if index == 0 && controller_name == 'reviews' %>
<% end %>

<% unless @presenter.nil? || controller_name == 'organizations' || controller_name == 'afishas' || @presenter.collection.last_page?  || controller_name == 'contests' || controller_name == 'map_projects' %> <! -- TODO: fix it -->
  <li class="pagination">
    <%= link_to_next_page @presenter.collection, "Еще обзоры (#{@presenter.current_count})", :remote => true, :class => 'js-next-page btn btn-block btn-grey btn-lg', :params => params %>
  </li>
<% end %>
