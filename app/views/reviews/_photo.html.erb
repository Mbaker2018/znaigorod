<div class="title">
  <%= link_to review.title, review_path(review) %>
</div>

<div class="details">
  <span class="show_tipsy comments" title="Комментарии">5 <%#= review.comments.count %></span>
  <span class="show_tipsy likes" title="Понравилось">3 <%#= review.likes_count %></span>
  <span class="show_tipsy visits" title="Просмотры">100 <%#= review.page_visits.count %></span>
</div>

<div class="date">
  <%= review.created_at %>
</div>

<div class="description">
  <ul class="images">
  <% review.gallery_images.take(6).each_with_index do |image, index| %>
    <li>
      <% if index == 1 %>
        <%= image_tag resized_image_url(image.file_url, 230, 80), :size => "230x80", :alt => review.title %>
      <% else%>
        <%= image_tag resized_image_url(image.file_url, 115, 80), :size => "115x80", :alt => review.title %>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
