<% if review.has_annotation_gallery? %>
  <ul class="images">
    <% if controller_path == 'my/reviews' && action_name == 'index' %>
      <% cache("review_#{review.useful_type}_#{controller_name}_#{action_name}_#{review.id}", expires_in: 10.minutes) do %>
        <%= review.annotation_gallery(185, 104) %>
      <% end %>
    <% elsif controller_path == 'reviews' && action_name == 'show' %>
      <% cache("review_#{review.useful_type}_#{controller_name}_#{action_name}_#{review.id}", expires_in: 10.minutes) do %>
        <%= review.annotation_gallery(140, 80) %>
      <% end %>
    <% elsif controller_path == 'afishas' || controller_path == 'map_projects' || controller_path == 'organizations' || controller_path == 'saunas' || controller_path == 'hotels' || controller_path == 'organizations' && action_name == 'show' %>
      <% cache("review_#{review.useful_type}_#{controller_name}_#{action_name}_#{review.id}", expires_in: 10.minutes) do %>
        <%= review.annotation_gallery(120, 80) %>
      <% end %>
    <% else %>
      <% cache("review_#{review.useful_type}_#{controller_name}_#{action_name}_#{review.id}", expires_in: 10.minutes) do %>
        <%= review.annotation_gallery %>
      <% end %>
    <% end %>
    <span class="counter fa fa-camera"> <%= review.all_images.size %></span>
  </ul>
<% end %>
