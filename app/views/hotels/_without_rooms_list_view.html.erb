<% @presenter.organizations_without_rooms.each do |organization| %>
  <li class='list_view_organization_item' data-longitude="<%= organization.longitude %>" data-latitude="<%= organization.latitude %>" data-image="<%= organization.logotype_url %>">
    <div class="list_view_organization_poster">
      <div class="info">
        <!-- информация о заведении -->
        <h1>
          <%= link_to item.organization.title.truncate(30), organization_path(item.organization) %>
          <span <%= "#{item.organization.schedules.first.holiday? ? 'class=close title=Закрыто' : 'class=open title=Открыто'}" %>></span>
        </h1>
        <!-- адрес -->
        <%= content_tag(:div, "#{organization.address_link}".html_safe, class: :place) if organization.address_link.present? %>
      </div>
    </div>
  </li>
<% end %>
