<div class="discounts_main_page_list">
  <div class="filter_header">
    <h2><%= link_to t('meta.discount.page_header'), discounts_path %></h2>
  </div>

  <div class="by_type">
    <ul>
      <% @discount_filter.type_filter.links.each do |link| %>
        <li><%= link_to link.title, link.path %></li>
      <% end %>
    </ul>
  </div>

  <% cache('main_page_discounts_filters', :expires_in => 10.minutes) do %>
    <div class="filters_wrapper">
      <div class="filters discount">
        <div class="by_kind">
          <ul>
            <% @discount_filter.kind_filter.links.take(9).each do |link| %>
              <li class="<%= link.klass.gsub('selected', '') %>">
                <%= link_to link.path do %>
                  <span class="name"><%= link.title %></span>
                  <span class="count"><%= link.results_count %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <ul class="posters">
    <% @discounts.each do |discount| %>
      <li>
        <%= render :partial => (discount.is_a?(DiscountDecorator) ? 'discounts/discount_poster' : discount.partial), :locals => { :discount => discount, :@width => '220' ,:@height => '164' } %>
      </li>
    <% end %>
  </ul>
</div>
