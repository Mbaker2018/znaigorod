<div class="webcams_main_page_list">
  <div class="filter_header">
    <h2><%= link_to t("meta.#{Settings['app.city']}.webcams.page_header"), webcams_path %></h2>
  </div>

  <% cache('main_page_webcams', :expires_in => 10.minutes) do %>
    <ul class="posters">
      <% @webcams.each do |webcam| %>
        <li><%= render :partial => 'webcams/webcam_poster', :locals => { :webcam => webcam } %></li>
      <% end %>
      <li>
        <ul class="item">
          <% @megapolis_review.each do |review|%>
           <li> <%= link_to review.title, review %></li>
          <% end %>
        </ul>
      </li>
    </ul>
  <% end %>

</div>
