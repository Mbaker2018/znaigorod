<div class='post_show'>
  <div class='post_title'>
    <h1><%= post.title %></h1>
  </div>

  <div class='left'>
    <div class="details">
      <span class="first_line">
        <span class="show_tipsy comments" title="Комментарии"><%= post.comments.count %></span>
        <span class="show_tipsy likes" title="Понравилось"><%= post.likes_count %></span>
        <span class="show_tipsy visits" title="Просмотры"><%= post.page_visits.count %></span>
      </span>

    </div>
    <div class="date">
      <%= post.date %>
    </div>

    <div class='wrapper'>
      <div class='post_content'>
        <%= post.content_for_show %>
      </div>

      <% unless local_assigns.has_key? :for_preview %>
        <% if false && post_images.any? %>
          <ul class='post_images'>
            <%= render :partial => 'post_images' %>
          </ul>
          <%= paginate post_images %>
        <% end %>

        <div class='share_and_likes'>
          <%= render :partial => 'share_this' %>
        </div>
      <% end %>

      <div class='tags_and_visits'>
        <% if post.tags.any? %>
          <ul class='tags'>
            <% post.tags.each do |tag| %>
              <li><%= tag %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

    <%= render :partial => 'comments/block', :locals => { :parent_obj => post } unless local_assigns.has_key? :for_preview %>
  </div>

  <% unless local_assigns.has_key? :for_preview %>
    <div class='right'>
      <% if @post.linked? %>
        <h2>Этот обзор связан с:</h2>
        <%= render :partial => 'posts/link_with' %>
      <% end %>

      <ul class="similar_posts">
        <% @similar_posts.each do |item| %>
          <li><%= render :partial => 'posts/post_poster', :locals => { :post => item } %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
