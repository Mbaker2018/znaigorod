<% if post.poster_url? %>
  <%= link_to image_tag(post.annotation_image(@width, @height), :size => "#{@width}x#{@height}"), url %>
<% elsif post.poster_image_url? %>
  <%= link_to image_tag(post.annotation_image(@width, @height),
                        :size => "#{@width}x#{@height}",
                        :title => post.title, :alt => post.title),
              url,
              :class => post.video_preview? ? 'js-video-preview' : nil,
              :data => post.video_preview? ? { :video => { :uid => post.content_parser.youtube_videos.first.uid, :width => '700' } } : nil
            %>
<% else %>
  <%= link_to image_tag(post.annotation_image(@width, @height), :size => "#{@width}x#{@height}"), url %>
<% end %>
