<tr class="dashed_border">
  <td class="center" align="center">
    <center>

      <table id="content_row" class="row content_row">
        <tr align="left">
          <td align="left" valign="top">
            <table class="one columns"><tr align="left"><td align="left" valign="top">
                  <a href="<%= path_for_email(private_message.producer) %>">
                    <img src="<%= resized_image_url(private_message.producer.avatar.url, 30, 30) %>" align="left"
                         alt="<%= private_message.producer.title %>"
                         title="<%= private_message.producer.title %>" />
                  </a>
                </td>
              </tr>
            </table>
          </td>
          <td class="without-padding" id="right_content" align="left" valign="top">
            <table class="nine columns">
              <tr align="left">
                <td class="line_height" align="left" valign="top">
                  <a href="<%= path_for_email(private_message.producer) %>"><%= private_message.producer.title %></a>, <span id="time"><%= l(private_message.created_at, format: "%d %B %Y, %k:%M") %></span>
                </td>
              </tr>
              <tr align="left">
                <td align="left" valign="top">
                  <span><%= private_message.body %></span>
                </td>
              </tr>
            </table>
            <table class="nine columns">
              <tr align="left">
                <td class="without-padding" align="left" valign="top">
                  <table id="orange-button">
                    <tr align="left">
                      <td class="without-padding" align="left" valign="top">
                        <a href="<%= my_dialogs_path(:only_path => false,
                                                     :anchor => "dialog_#{private_message.producer.id}",
                                                     :utm_campaign => "znaigorod",
                                                     :utm_medium => "email",
                                                     :utm_source => "email") %>">
                          <img src="<%= "#{Settings['app']['url']}/assets/public/mailer_buttons_to_dialogs.png" %>" alt="<%= t("notice_mailer.to_dialog") %>" title="<%= t("notice_mailer.to_dialog") %>" />
                        </a>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </center>

  </td>
</tr>
