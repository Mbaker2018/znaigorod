<% content_for :content do %>
  <tr class="solid_border">
  	<td>
      <table class="custom_column_width columns">
        <% @digest.each do |materials| %>
          <% if materials.first.is_a?(Invitation) %>
            <h2>
              <%= t "notice_mailer.invite_you" %>
            </h2>
          <% elsif materials.first.is_a?(PrivateMessage) %>
            <h2>
              <%= t "notice_mailer.have_written_to_you" %>
            </h2>
          <% elsif materials.first.is_a?(Vote) %>
            <h2>
              <%= t "notice_mailer.liked_your_comments" %>
            </h2>
          <% elsif materials.first.is_a?(Comment) %>
            <h2>
              <%= t "notice_mailer.answered_on_you_comment" %>
            </h2>
          <% end %>
          <%= render(partial: "personal_digest_mailer/#{ materials.first.class.name.underscore  }", collection: materials) unless materials.blank? %>
        <% end %>
      </table>
  	</td>
  </tr>
<% end %>
