<% content_for :content do %>
  <%= render partial: "invitations", locals: { invitations: @digest.invitations } if @digest.invitations.present? %>
  <%= render partial: "private_messages", locals: { private_messages: @digest.private_messages } if @digest.private_messages.present? %>
  <%= render partial: "comment_likes", locals: { comment_likes: @digest.comment_likes } if @digest.comment_likes.present? %>
  <%= render partial: "comment_answers", locals: { comment_answers: @digest.comment_answers } if @digest.comment_answers.present? %>

  <% if false %>
  <% @afishas.each do |afisha| %>
    <% unless afisha == @afishas.last %>
      <tr class="dashed_border">
     <% end %>
      <td class="center" align="center">
        <center>

          <table id="content_row" class="row content_row">
            <tr align="left">
              <td id="left_content" align="left" valign="top">
                <table class="custom_column columns" >
                  <tr align="left">
                    <td align="left" valign="top">
                      <a href="<%= afisha_path afisha, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email" %>">

                        <% if afisha.poster_url.present? %>
                          <%= image_tag(resized_image_url(afisha.poster_url, 100 , 135),
                                        :size => '100x135', :alt => afisha.title) %>
                                    <% else %>
                                      <%= image_tag(resized_image_url('public/stub_poster.png', 100 , 135),
                                                    :size => '100x135', :alt => afisha.title) %>
                        <% end %>
                      </a>
                    </td>
                  </tr>
                </table>
              </td>
              <td id="right_content_stat" align="left" valign="top">
                <table class="eight columns">
                  <tr align="left">
                    <td class="line_height" align="left" valign="top">
                      <a href="<%= afisha_path afisha, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email" %>"><%= afisha.title %></a>
                    </td>
                  </tr>
                  <tr align="left">
                    <td align="left" valign="top">
                      <table class="eight columns">
                        <tr align="left">
                          <td class="category" align="left" valign="top">
                            <span>Участники: </span>
                            <span class="category_value"><%= afisha.visits.size %></span>
                          </td>
                          <td class="category" align="left" valign="top">
                            <span>Приглашения: </span>
                            <span class="category_value"><%= afisha.invitations.inviter.without_invited.size %></span>
                          </td>
                        </tr>
                        <tr align="left">
                          <td class="category" align="left" valign="top">
                            <span>Комментарии: </span>
                            <span class="category_value"><%= afisha.comments.size %></span>
                          </td>
                          <td class="category" align="left" valign="top">
                            <span>Понравилось: </span>
                            <span class="category_value"><%= afisha.likes_count %></span>
                          </td>
                        </tr>
                        <tr align="left"><td class="category" align="left" valign="top">
                            <span>Просмотры: </span>
                            <span class="category_value"><%= afisha.page_visits.count %></span>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </center>

      </td>
    </tr>
  <% end %>
  <% end %>

<% end %>
