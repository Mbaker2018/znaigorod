<tr class="dashed_border">
  <td class="center" align="center">
    <center>

      <table id="content_row" class="row content_row">
        <tr align="left">
          <td align="left" valign="top">
            <table class="one columns">
              <tr align="left">
                <td align="left" valign="top">
                  <a href="<%= account_path comment.parent.user.account, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email"  %>">
                    <img src="<%= resized_image_url(comment.parent.user.account.avatar.url, 30, 30) %>" align="left" title="<%= comment.parent.user.account.title %>" alt="<%= comment.parent.user.account.title %>" /></a>
                </td>
              </tr>
            </table>
          </td>
          <td class="without-padding" id="right_content" align="left" valign="top">
            <table class="another_custom_column columns">
              <tr align="left">
                <td class="line_height" align="left" valign="top">
                  <a href="<%= account_path comment.parent.user.account, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email"  %>"><%= comment.parent.user.account.title %></a>, <span id="time"><%= l(comment.parent.created_at, format: "%d %B %Y, %k:%M") %></span>
                </td>
              </tr>

              <tr align="left">
                <td id="time" class="line_height" align="left" valign="top">
                  <span>

                    <% if comment.commentable.is_a?(Work) %>
                      <%= link_to (comment.commentable.title || comment.commentable.slug), work_path([comment.commentable.contest, comment.commentable], :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email") %>
                    <% end %>
                    <% %w[afisha discount organization post].each do |item| %>
                      <% if comment.commentable.is_a?(item.camelize.constantize) %>
                        <%= link_to comment.commentable.title, send("#{item}_path", comment.commentable, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email") %>
                      <% end %>
                    <% end %>

                  </span>
                </td>
              </tr>

              <tr align="left"><td align="left" valign="top">
                  <span><%= comment.parent.body %></span>
                </td>
              </tr>
            </table>
            <table class="another_custom_column columns">
              <tr align="left">
                <td align="left" valign="top">
                  <table class="another_custom_column columns">
                    <tr align="left">
                      <td class="without-padding" align="left" valign="top">
                        <table class="one columns">
                          <tr align="left">
                            <td align="left" valign="top">
                              <a href="<%= account_path comment.user.account, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email" %>">
                                <img src="<%= resized_image_url(comment.user.account.avatar.url, 30, 30) %>" align="left" title="<%= comment.user.account.title %>" alt="<%= comment.user.account.title %>" />
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                      <td align="left" valign="top">
                        <table class="eight_half columns">
                          <tr align="left">
                            <td class="line_height" align="left" valign="top">
                              <a href="<%= account_path comment.user.account, :only_path => false, :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email"  %>"><%= comment.user.account.title %></a>, <span id="time"><%= l(comment.created_at, format: "%d %B %Y, %k:%M") %></span>
                            </td>
                          </tr>
                          <tr align="left">
                            <td align="left" valign="top">
                              <span><%= comment.body.truncated.as_html if comment.body? %></span>
                            </td>
                          </tr>
                        </table>
                        <table class="nine columns">
                          <tr align="left">
                            <td class="without-padding" align="left" valign="top">
                              <table id="orange-button">
                                <tr align="left">
                                  <td class="without-padding" id="answer_button_reply" align="left" valign="top">

                                    <% if comment.commentable.is_a?(Work) %>
                                      <%= link_to image_tag("#{Settings['app']['url']}/assets/public/mailer_buttons_answer.png", :title => t("notice_mailer.answer"), :alt => t("notice_mailer.answer")), work_path([comment.commentable.contest, comment.commentable], :only_path => false, :anchor => "answer_#{comment.id}", :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email") %>
                                    <% end %>
                                    <% %w[afisha discount organization post].each do |item| %>
                                      <% if comment.commentable.is_a?(item.camelize.constantize) %>
                                        <%= link_to image_tag("#{Settings['app']['url']}/assets/public/mailer_buttons_answer.png", :title => t("notice_mailer.answer"), :alt => t("notice_mailer.answer")), send("#{item}_path", comment.commentable, :only_path => false, :anchor => "answer_#{comment.id}", :utm_campaign => "znaigorod", :utm_medium => "email", :utm_source => "email") %>
                                      <% end %>
                                    <% end %>

                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </center>

  </td>
</tr>
