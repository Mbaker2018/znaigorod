<%= javascript_include_tag "webcams/application" %>
<style>
  body { margin: 0 }
  a.link {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 13px;
    color: #0D44A0;
  }
  a.link:hover {
    color: red;
  }
  .webcam_show {
    position: relative;
  }
  a.layer {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    width: 260;
    height: 150;
    text-indent: -4444em;
    z-index: 999999;
  }
</style>

<div class='webcam_show'>
  <%= link_to @webcam.title, @webcam, :class => 'layer', :target => '_blank' %>
  <%= render :partial => "webcams/#{@webcam.kind}", :object => @webcam, :locals => { :width => 260, :height => 150 } %>
</div>
<div><%= link_to @webcam.title, @webcam, :class => 'link', :target => '_blank' %></div>
<div><%= link_to 'Другая камера', yandex_widgets_webcams_path, :class => 'link' %></div>
