<div class="banners">
  <div class="first banner">
    <h3>Первый вариант</h3>

    <%= image_tag "#{root_path}images/banners/88_31.gif", :size => '88x31' %>

    <%= label_tag :code, 'Код для вставки:' %>
    <%= text_area_tag :code, link_to(image_tag("#{root_url}images/banners/88_31.gif", :size => '88x31'), afisha_index_url, :target => '_blank', :title => 'Афиша Томска') %>
  </div>

  <div class="second banner">
    <h3>Второй вариант</h3>

    <%= image_tag "#{root_path}images/banners/240_120.jpg", :size => '240x120' %>

    <%= text_area_tag :second_banner_hidden_code,
      link_to(image_tag(("#{root_url}images/banners/240_120.jpg")), afisha_index_url, :target => '_blank', :title => 'Афиша Томска'),
      :class => 'hidden_code' %>

    <%= label_tag :second_banner_width, 'Ширина:' %>
    <%= text_field_tag :second_banner_width, 240, :class => 'width' %>

    <%= label_tag :second_banner_code, 'Код для вставки:' %>
    <%= text_area_tag :second_banner_code, nil, :class => 'code' %>

    <%= submit_tag 'Сгенерировать код', :class => 'generate button' %>
  </div>

  <div class="third banner">
    <h3>Третий вариант</h3>

    <%= image_tag "#{root_path}images/banners/120_240.jpg", :size => '120x240' %>

    <%= text_area_tag :third_banner_hidden_code,
      link_to(image_tag("#{root_url}images/banners/120_240.jpg"), afisha_index_url, :target => '_blank', :title => 'Афиша Томска'),
      :class => 'hidden_code' %>

    <%= label_tag :third_banner_width, 'Ширина:' %>
    <%= text_field_tag :third_banner_width, 120, :class => 'width' %>

    <%= label_tag :third_banner_code, 'Код для вставки:' %>
    <%= text_area_tag :third_banner_code, nil, :class => 'code' %>

    <%= submit_tag 'Сгенерировать код', :class => 'generate button' %>
  </div>

  <div class="fourth banner">
    <h3>Виджет вебкамер</h3>
    <%= render :partial => 'widgets/webcams/embded_code', :locals => {:widget => @widget} %>
    <p><%= link_to "Поставить себе на сайт", new_widgets_webcam_path, :class => 'generate button' %></p>
  </div>
</div>
