<% content_for :stylesheets do %>
  <%= stylesheet_link_tag    "public/application", :media => "all" %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag "public/application" %>
<% end %>

<%= content_for :content do %>
  <div class="container-fluid header">
    <div class="row-fluid">

      <div class="span3">
        <div class="row-fluid">
          <div class="logo span7">
            <a href="http://znaigorod.ru/"><%= image_tag 'logo.png', :title => t('site_title'), :alt => t('site_title'), :width => '134', :height => '79' %></a>
          </div>
          <div class="city span3">
            <a href="#" class='dashed_light_blue'>Томск</a>
          </div>
        </div>
      </div>

      <div class="span5">
        <div class="search row-fluid">
          <div class="span12">
            <form action="#" class='row-fluid'>
              <div class='span10'>
                <input type="text" class='input' placeholder='Поиск по городу' />
              </div>
              <div class='span2'>
                <input type="submit" class='submit row-fluid' value='<%= t('find') %>'/>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="container-fluid main_wrapper">
    <%= yield %>
  </div>
</div>


<div class="container-fluid footer">
  <div class="inner row-fluid">
    <div class="span5">
      <div class="bottom_navigation row-fluid">
        <div class="span6">
          <h5><a href='#' class='dashed_light_blue'><%= t('organizations') %></a></h5>
          <ul>
            <li><a href='#' class='solid_white'>Вкусно</a></li>
            <li><a href='#' class='solid_white'>Весело</a></li>
            <li><a href='#' class='solid_white'>Интересно</a></li>
            <li><a href='#' class='solid_white'>Спортивно</a></li>
            <li><a href='#' class='solid_white'>Красиво</a></li>
            <li><a href='#' class='solid_white'>Автомобильно</a></li>
            <li><a href='#' class='solid_white'>Важно</a></li>
            <li><a href='#' class='solid_white'>Хозяйственно</a></li>
          </ul>
        </div>
        <div class="span6">
          <h5><a href='#' class='dashed_light_blue'><%= t('affiche') %></a></h5>
          <ul>
            <li><a href='#' class='solid_white'>Кино</a></li>
            <li><a href='#' class='solid_white'>Концерты</a></li>
            <li><a href='#' class='solid_white'>Выставки</a></li>
            <li><a href='#' class='solid_white'>Спектакли</a></li>
            <li><a href='#' class='solid_white'>Вечеринки</a></li>
            <li><a href='#' class='solid_white'>Спорт</a></li>
          </ul>
        </div>
      </div>
      <div class="row-fluid logo">
        <a href="http://znaigorod.ru/"><%= image_tag 'logo.png', :title => t('site_title'), :alt => t('site_title'), :width => '134', :height => '79' %></a>
      </div>
    </div>

    <div class="span3 our_social_link">
      <h5><%= t('our_social_link') %></h5>
      <ul>
        <li class='vk'><a href='http://vk.com/znaigorod' class='solid_white'>vk.com/znaigorod</a></li>
        <li class='twitter'><a href='http://twitter.com/znaigorod' class='solid_white'>twitter.com/znaigorod</a></li>
        <li class='email'><a href='mailto:team@znaigorod.ru' class='solid_white'>team@znaigorod.ru</a></li>
        <li class='phone'><a href='#' class='solid_white'>+7 (3822) 11-11-11</a></li>
      </ul>
    </div>

    <div class="span4 twitter_timeline">
      <h5><%= t('twitter_timeline') %></h5>
      <script>
        new TWTR.Widget({
          version: 2,
          type: 'profile',
          rpp: 4,
          interval: 30000,
          width: 'auto',
          height: 'auto',
          theme: {
            shell: {
              background: 'transparent',
            },
            tweets: {
              background: 'transparent'
            }
          },
          features: {
            scrollbar: false,
            loop: false,
            live: false,
            behavior: 'all',
            avatars: false
          }
        }).render().setUser('znaigorod').start();
      </script>
    </div>
  </div>
</div>

<% end %>

<%= render :file => 'layouts/base' %>
