<% content_for :content do %>
  <tr class="solid_border">
    <td class="padding_center">
      <table class="custom_column_width columns">
        <tr>
          <h2 class="by_center">
            Уважаемый(ая) <%= @account.first_name %>  <%= @account.last_name %>, через 3 дня Ваши скидки будут перемещены в архив.
          </h2>
        </tr>
        <tr>
          <ul>
            <% @discounts.each do |discount| %>
              <li>
                <%= link_to discount.title, discount_url(discount) %>
